#
# Default development layout
#

# select the first (0) pane
selectp -t 0

# split it into two halves
splitw -h -p 50

# select the new, second (1) pane
selectp -t 1

# split it into two halves
splitw -v -p 50

# go back to the bottom left pane
selectp -t 0

# open gitsh
send-keys 'gitsh' C-m

# clear gitsh
send-keys '!clear' C-m

# go back to the first pane
selectp -t 0

# open vim
send-keys 'vim' C-m
